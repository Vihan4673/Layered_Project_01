<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480" prefWidth="550" style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #f1f8e9); -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project_01.Controller.Booking.PaymentPageController">

    <VBox alignment="TOP_CENTER" layoutX="0.0" layoutY="0.0" prefHeight="480" prefWidth="550" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
        </padding>
        <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3949ab;" text="Payment Details">
            <font>
                <Font name="Inter Bold" size="24.0" />
            </font>
        </Label>
        <GridPane hgap="20.0" vgap="18.0">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="140.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="280.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <Label text="Guest Phone:" style="-fx-font-size: 15px; -fx-text-fill: #424242;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtGuestPhone" editable="false" promptText="Guest's phone number" style="-fx-background-color: #f5f5f5; -fx-border-color: #d0d0d0; -fx-border-radius: 8; -fx-padding: 10px; -fx-text-fill: #555555;" GridPane.columnIndex="1" />

            <Label text="Total Amount:" GridPane.rowIndex="1" style="-fx-font-size: 15px; -fx-text-fill: #424242;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtTotalAmount" editable="false" promptText="Total amount due" style="-fx-background-color: #f5f5f5; -fx-border-color: #d0d0d0; -fx-border-radius: 8; -fx-padding: 10px; -fx-text-fill: #555555;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Guest Paid:" GridPane.rowIndex="2" style="-fx-font-size: 15px; -fx-text-fill: #424242;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtGuestPaid" onKeyReleased="#calculateBalance" promptText="Enter the amount paid by guest" style="-fx-border-color: #64b5f6; -fx-border-radius: 8; -fx-padding: 10px; -fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Balance:" GridPane.rowIndex="3" style="-fx-font-size: 15px; -fx-text-fill: #424242;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtAmountToPay" editable="false" promptText="Remaining balance" style="-fx-background-color: #e3f2fd; -fx-border-color: #90caf9; -fx-border-radius: 8; -fx-padding: 10px; -fx-font-weight: bold; -fx-text-fill: #3f51b5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Payment Method:" GridPane.rowIndex="4" style="-fx-font-size: 15px; -fx-text-fill: #424242;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="25.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                <RadioButton fx:id="rbCash" onAction="#handlePaymentMethodChange" text="Cash" style="-fx-font-size: 14px; -fx-text-fill: #333333;">
                    <toggleGroup>
                        <ToggleGroup fx:id="paymentToggleGroup" />
                    </toggleGroup>
                    <font>
                        <Font size="13.0" />
                    </font>
                </RadioButton>
                <RadioButton fx:id="rbCard" onAction="#handlePaymentMethodChange" text="Card" toggleGroup="$paymentToggleGroup" selected="true" style="-fx-font-size: 14px; -fx-text-fill: #333333;">
                    <font>
                        <Font size="13.0" />
                    </font>
                </RadioButton>
            </HBox>

            <Label fx:id="lblCardNumber" text="Card Number:" GridPane.rowIndex="5" style="-fx-font-size: 15px; -fx-text-fill: #424242;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="txtCardNumber" promptText="Enter card number" style="-fx-border-color: #64b5f6; -fx-border-radius: 8; -fx-padding: 10px; -fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        </GridPane>

        <HBox alignment="CENTER" spacing="25.0" VBox.vgrow="ALWAYS">
            <Button fx:id="btnPay" onAction="#handlePayAction" prefWidth="160.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,128,0,0.2), 8, 0, 0, 0);" text="Complete Payment" />
            <Button fx:id="btnPrintBill" onAction="#handlePrintBillAction" prefWidth="160.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,128,0.2), 8, 0, 0, 0);" text="Print Bill" />
        </HBox>

        <Label fx:id="lblStatus" style="-fx-font-weight: bold; -fx-font-size: 15px; -fx-text-fill: #d32f2f;" text="Payment status or error messages will appear here." />
    </VBox>
</AnchorPane>
